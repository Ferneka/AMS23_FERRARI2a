@{
    ViewData["Title"] = "Produtos";
}

<div class="d-flex justify-content-between">
    <h1>@ViewData["Title"]</h1>
    <a class="btn btn-secondary btn-group" role="button" asp-controller="Produto" asp-action="Add">Cadastrar Produto</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">Valor</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">1</th>
            <td>Pizza de Frango</td>
            <td>R$39,99</td>
            <td>
                <a class="btn btn-primary" asp-controller="Produto" asp-action="ToEdit">Editar</a>
                <a class="btn btn-danger" asp-controller="Produto" asp-action="Delete">Apagar</a>
            </td>
        </tr>
    </tbody>
</table>