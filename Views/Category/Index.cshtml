@model IEnumerable<CategoryModel>
@{
    ViewData["Title"] = "Categorias";
}

<div class="d-flex justify-content-between" style="margin-top: 25px;">
    <h1>@ViewData["Title"]</h1>
    <a class="btn btn-secondary btn-group" role="button" asp-controller="Category" asp-action="Add" style="background-color:#9d0207;">Cadastrar Categoria</a>
</div>
<table class="table">
  <thead>
   <tr>
    <th scope="col">Id</th>
    <th scope="col">Nome</th>
    <th scope="col"></th>
   </tr>
  </thead>
  <tbody>
     @foreach(var category in Model){
      <tr>
      <td>@category.Id</td>
      <td>@category.Description</td>
      <td>
        <a class="btn btn-primary" role="button" asp-controller="Category" asp-action="ToEdit" asp-route-id="@category.Id">Editar</a>
        <a class="btn btn-danger" role="button" asp-controller="Category" asp-action="DeleteConfirmation" asp-route-id="@category.Id">Apagar</a>
      </td>
    </tr>
    }
  </tbody>
</table>